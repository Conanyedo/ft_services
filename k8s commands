<!-- //Minikube commands// -->
minikube start <!--create cluster-->
minikube delete <!--delete cluster-->
minikube status <!--show status-->
eval $(minikube docker-env) <!--point local shell to minikube's docker-daemon-->

<!-- //kubectl commands// -->
kubectl get pod <!--list pods-->
kubectl get deployment <!--list deployments-->
kubectl get nodes <!--list nodes-->
kubectl get service <!--list service-->
kubectl create deployment {name} --image={image-name} <!--create deployment-->
kubectl delete deployment {name} <!--delete deployment-->
kubectl delete --all deployments<!--delete all deployment-->
kubectl delete --all services <!--delete all services-->
kubectl edit deployment {pod-name} <!--edit conf file-->
kubectl logs {pod-name} <!--run pod-->
kubectl exec -it {pod-name} -- {command} <!--exec commands inside pod-->
kubectl apply -f {deployment.yaml} <!--create deployment-->
kubectl apply -f {service.yaml} <!--create service-->
kubectl get deployments --all-namespaces <!--list deployment with namespace-->
kubectl delete -n {NAMESPACE} deployment {DEPLOYMENT}